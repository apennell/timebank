<div class="container" style="margin-top:200px">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><strong>Sign Up </strong></h3></div>
        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <% if flash[:alert] %>
              <div class="alert"><%= flash[:alert] %></div>
            <% end %>
            
            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
            </div>

            <div class="field">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, placeholder: "Last name" %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :phone %><br />
              <%= f.text_field :phone, placeholder: "Phone number" %>
            </div>

            <div class="field">
              <%= f.label :services_offered %><br />
              <%= f.text_field :services_offered, placeholder: "What can you help with?" %>
            </div>

            <div class="field">
              <%= f.label :city %><br />
              <%= f.text_field :city, placeholder: "City" %>
            </div>

            <div class="field">
              <%= f.label :zipcode %><br />
              <%= f.text_field :zipcode, placeholder: "Zipcode" %>
            </div>

            <div>
              <i>The Epoch community is founded upon the premise of its members working together. As such, it is imperitive that every member interact with the community honestly, both on and offline. By signing up, you agree to these terms.</i>
            </div><br>

            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>

          Already have an account? <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

