<p id="notice"><%= notice %></p>

<h2>
  <strong>Title:</strong>
  <%= @service_request.title %>
</h2>

<p>
  <strong>Description:</strong>
  <%= @service_request.description %>
</p>

<p>
  <strong>Estimated hours:</strong>
  <%= @service_request.estimated_hours %>
</p>

<p>
  <strong>Location:</strong>
  <%= @service_request.location %>
</p>

<p>
  <strong>Timing:</strong>
  <%= @service_request.timing %>
</p>

<p>
  <strong>Requested by:</strong>
  <%= @service_request.recipient.first_name %>
</p>

<% if @service_request.requested_by_id == @current_user.id %>
  <%= link_to 'Edit this request', edit_service_request_path(@service_request) %> | 
<% end %>
<%= link_to 'See all service requests', service_requests_path %>

<br><br>
<h2>
<% if !(@service_request.requested_by_id == @current_user.id) %>
  <%= link_to 'I can help with this!', create_exchange_path(@service_request) %>
<% end %>
</h2>