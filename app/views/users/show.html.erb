<h3>Service requests</h3>
<% @requests.where(:requested_by_id => @user.id).each do |r| %>
  <div>
    <strong><%= r.title %></strong><br>
    <%= r.created_at %><br>
    <%= r.description %><br>
    Estimate hours: <%= r.estimated_hours %><br>
    Location: <%= r.location %><br>
    Timing: <%= r.timing %><br>      
  </div>
<% end %>

